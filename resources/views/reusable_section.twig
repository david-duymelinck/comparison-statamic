{% set component = item.0 %}

{% switch component.type %}
{% case "attribution" %}
    {% include "components/attribution" with {"content": fields} %}
{% case "cta" %}
    {% include "components/cta" %}
{% case "form" %}
    {% include "components/form" %}
{% case "grid" %}
    {% include "components/grid" %}
{% case "image" %}
    {% include "components/image" %}
{% case "person" %}
    {% include "components/person" %}
{% case "text" %}
    {% include "components/text" with {"content": text} %}
{% case "video" %}
    {% include "components/video" %}
{% endswitch %}
